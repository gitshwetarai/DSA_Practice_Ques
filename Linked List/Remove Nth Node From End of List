class Solution {
public:
    ListNode* removeNthFromEnd(ListNode* head, int n) {
        
        if(head ==  NULL)
            return head;
        
        ListNode *first = head;
        ListNode *second = head;
        for(int i=0; i<n; i++)
        {
            if(first == NULL)
                return NULL;
                
            first = first->next;
        }
        if(first==NULL)
        return second->next;
        
        while(first->next != NULL)
        {
            first = first->next;
            second = second->next;
        }
        ListNode *temp = second->next;
        second->next = second->next->next;
        delete temp;
        
        return head;
    }
};
